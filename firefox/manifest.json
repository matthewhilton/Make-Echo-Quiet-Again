{
  "manifest_version": 2,
  "name": "Make Echo Quiet Again!",
  "version": "1.0",

  "content_scripts": [
    {
      "matches": ["https://echo360.org.au/*"],
      "js": ["muteEcho.js"]
    }
  ],

  "browser_action": {
    "browser_style": true,
    "default_icon": "icons/audio_mute.svg",
    "default_title": "Make Echo Quiet Again!",
    "default_popup": "popup.html"
  },

  "permissions": [
    "activeTab",
    "tabs"
  ]
}